{
	"name": "@killbasa/redis-utils",
	"version": "0.0.4",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/redis-utils.git"
	},
	"homepage": "https://github.com/killbasa/redis-utils",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"import": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.mjs"
		},
		"require": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist/**/*.js*",
		"dist/**/*.mjs*",
		"dist/**/*.d*"
	],
	"scripts": {
		"build": "tsup",
		"check": "tsc -b src",
		"lint": "eslint --ext ts src tests",
		"lint:fix": "eslint --fix --ext ts src tests",
		"format": "prettier --write --log-level=warn \"{src,tests}/**/*.{js,ts,json}\"",
		"test": "vitest run",
		"test:watch": "vitest -w"
	},
	"dependencies": {
		"ioredis": "^5.3.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@kbotdev/eslint-config": "^1.1.0",
		"@kbotdev/prettier-config": "^1.0.0",
		"@kbotdev/ts-config": "^1.0.0",
		"@swc/core": "^1.3.80",
		"@types/node": "^20.5.7",
		"eslint": "^8.48.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.3",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.3"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"publishConfig": {
		"access": "public"
	}
}
